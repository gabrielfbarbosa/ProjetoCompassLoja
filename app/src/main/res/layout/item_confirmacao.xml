<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/descricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/produto_galaxy_a52" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:maxLines="4"
            android:textAlignment="viewStart"
            app:layout_constraintBottom_toBottomOf="@+id/imagem"
            app:layout_constraintEnd_toStartOf="@id/txt_quantidade"
            app:layout_constraintStart_toEndOf="@+id/imagem"
            app:layout_constraintTop_toTopOf="@+id/imagem"
            app:layout_constraintVertical_bias="1.0"
            tools:text="Smartphone Samsung Galaxy A52 5G" />

        <TextView
            android:id="@+id/txt_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/quantidade"
            app:layout_constraintEnd_toStartOf="@+id/preco"
            app:layout_constraintTop_toTopOf="@+id/descricao" />

        <TextView
            android:id="@+id/num_quantidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imagem"
            app:layout_constraintEnd_toEndOf="@id/txt_quantidade"
            app:layout_constraintStart_toStartOf="@+id/txt_quantidade"
            app:layout_constraintTop_toBottomOf="@+id/txt_quantidade"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="R$ 1.799,00"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/imagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/num_quantidade"
            app:layout_constraintTop_toBottomOf="@+id/txt_preco"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PreÃ§o"
            app:layout_constraintEnd_toEndOf="@+id/preco"
            app:layout_constraintStart_toStartOf="@+id/preco"
            app:layout_constraintTop_toTopOf="@+id/txt_quantidade" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>