<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.carrinhocompras.CarrinhoComprasFragment">

    <TextView
        android:id="@+id/fragment_carrinho_compras_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/carrinho_compras"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_carrinho_compras_produtos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_carrinho_compras_btn_continuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_carrinho_compras_titulo"
       tools:listitem="@layout/item_carrinho_compra"/>

    <Button
        android:id="@+id/fragment_carrinho_compras_btn_continuar"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:layout_marginBottom="12dp"
        android:text="@string/btn_continuar"
        app:layout_constraintBottom_toTopOf="@+id/fragment_carrinho_compras_btn_add_mais_produto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fragment_carrinho_compras_btn_add_mais_produto"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        app:cornerRadius="20dp"
        android:layout_marginBottom="25dp"
        android:text="@string/btn_add_produto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>