<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TelaPrincipalLayout"
    tools:context="br.com.compass.compassmart.ui.telaprincipal.TelaPrincipalFragment">

    <ScrollView
        android:id="@+id/TelaPrincipalScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/TPTexto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/TelaPrincipalScroll"
        android:text="@string/cat_texto"/>

    <HorizontalScrollView
        android:id="@+id/TPScrollH"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/TPTexto1"/>

    <TextView
        android:id="@+id/TPTexto2"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TPScrollH"
        android:text="@string/melhoresprod_texto"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/TPGrade"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/TPTexto2"/>

</androidx.constraintlayout.widget.ConstraintLayout>