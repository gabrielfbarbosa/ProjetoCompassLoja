<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_carrinho_compra_imagem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_carrinho_compra_descricao"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/produto_galaxy_a52" />

        <TextView
            android:id="@+id/item_carrinho_compra_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="4"
            android:text="Galaxy A52 5G"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toStartOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintStart_toEndOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_imagem" />

        <TextView
            android:id="@+id/item_carrinho_compra_txt_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/quantidade"
            app:layout_constraintEnd_toStartOf="@+id/item_carrinho_compra_excluir"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_descricao" />

        <ImageButton
            android:id="@+id/item_carrinho_compra_excluir"
            style="@android:style/Widget.ImageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_txt_quantidade"
            app:srcCompat="@drawable/icon_lixeira" />

        <TextView
            android:id="@+id/item_carrinho_compra_numero_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintEnd_toEndOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintStart_toStartOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintTop_toBottomOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_carrinho_compra_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="R$ 1.799,00"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintStart_toStartOf="@+id/item_carrinho_compra_descricao"
            app:layout_constraintTop_toBottomOf="@+id/item_carrinho_compra_descricao"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>