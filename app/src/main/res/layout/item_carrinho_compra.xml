<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_carrinho_compra_imagem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_onboarding1" />

        <TextView
            android:id="@+id/item_carrinho_compra_descricao"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toEndOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_imagem"
            tools:text="Modelo do produto" />

        <TextView
            android:id="@+id/item_carrinho_compra_txt_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/quantidade"
            app:layout_constraintStart_toEndOf="@+id/item_carrinho_compra_descricao"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_descricao" />

        <ImageButton
            android:id="@+id/item_carrinho_compra_excluir"
            style="@android:style/Widget.ImageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_txt_quantidade"
            app:srcCompat="@drawable/icon_lixeira" />

        <TextView
            android:id="@+id/item_carrinho_compra_numero_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintEnd_toStartOf="@+id/item_carrinho_compra_excluir"
            app:layout_constraintStart_toStartOf="@+id/item_carrinho_compra_txt_quantidade"
            app:layout_constraintTop_toTopOf="@+id/item_carrinho_compra_txt_quantidade"
            tools:text="1" />

        <TextView
            android:id="@+id/item_carrinho_compra_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/item_carrinho_compra_imagem"
            app:layout_constraintStart_toStartOf="@+id/item_carrinho_compra_descricao"
            app:layout_constraintTop_toBottomOf="@+id/item_carrinho_compra_descricao"
            tools:text="R$ 3.000,00" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>