<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_detalhes_do_produto_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.tela_detalhes.DetalhesDoProdutoFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_comprar_agora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagemProduto"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_margin="24dp"
                android:scaleType="centerInside"
                android:transitionName="photoToAnimate"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/QuadradoArredondado"
                app:srcCompat="@drawable/produto_galaxy_a52" />

            <TextView
                android:id="@+id/ProdutoModelo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:text="Galaxy A52 5G"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imagemProduto"
                app:layout_constraintTop_toBottomOf="@+id/imagemProduto" />

            <TextView
                android:id="@+id/precoDoProduto"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:text="R$ 1779,00 à vista\nEm até 12x de R$ 148,25 sem juros"
                android:textColor="@color/orange_700"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/ProdutoModelo"
                app:layout_constraintTop_toBottomOf="@+id/ProdutoModelo" />

            <TextView
                android:id="@+id/descricaoDoProduto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Ficha Técnica e Informações:\n\nO Galaxy A52 5G faz parte dos lançamentos “duplos”, em que temos uma versão LTE e outra, mais atualizada, já suportando as novas redes 5G. De forma que ele traz configurações bastante semelhantes à versão 4G.\nAinda assim, é uma boa escolha para aqueles que procuram um celular com configurações intermediárias e com bom custo-benefício.\nO Galaxy A52 5G tem uma tela com taxa de atualização de 120 Hz, o que promove maior fluidez nas animações e filmes, trazendo maior suavidade nos movimentos. Para jogos, esse recurso também é um diferencial muito interessante e que pode melhorar a experiência.\nAlém disso, este celular conta com certificação IP67, garantindo proteção à água e à poeira. Isso oferece maior durabilidade e menor risco de prejudicar o celular em dias chuvosos.\nCom o Snapdragon 750G, o Galaxy A52 5G traz excelente performance e um consumo eficiente da bateria de 4.500 mAh, podendo chegar até o final do dia com certa folga. "
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/precoDoProduto"
                app:layout_constraintTop_toBottomOf="@+id/precoDoProduto" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_comprar_agora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/btn_comprar"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>