<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    app:cardBackgroundColor="@color/orange_700"
    app:cardElevation="@dimen/material_emphasis_disabled">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/categoriaLayout">

        <ImageView
            android:id="@+id/item_categoria_imagem"
            app:layout_constraintTop_toTopOf="@id/categoriaLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/cat_texto"
            app:srcCompat="@drawable/produto_galaxy_s22" />

        <TextView
            android:id="@+id/item_categoria_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_categoria_imagem"
            android:text="@string/cat_texto"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>